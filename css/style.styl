@import base

body
	background #ccc
	font 14px "Lucida Grande", Helvetica, Arial, sans-serif
	padding 15px 0
a
	color: #00B7FF
.envoltura
	margin 0 auto
	width 960px
	background #fff
	border 1px solid #c4c4c4
	box-shadow(0 0 2px 1px #bbb)
.header
	.arriba
		height 80px
		display table
		.logo-container
			display table-cell
			vertical-align middle
			.logo
				display block
				/*height 44px
				width 76px*/
				margin-left 15px
	.menu
		padding 0 10px
		height 36px
		ul
			margin 0
			padding 0
			background #cdcdcd
			height 100%
			li
				list-style none
				display inline-block
				margin 5px 0 0 5px
				a
					color #000
					padding 0 20px
					display inline-block
					height 26px
					line-height 26px
					text-decoration none
					&:hover
						background #000
						color #fff
.cuerpo
	padding 10px 15px

.footer
	margin 0 10px
	height 30px
	line-height 30px
	border-top 1px solid #cdcdcd
	font-size 11px
	color #666