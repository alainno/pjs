/* botones */
button::-moz-focus-inner,input::-moz-focus-inner
	border 0
	padding 0
:focus
	outline none
.boton
	border-radius(4px)
	border 1px solid #ccc
	border none
	box-shadow(1px 1px 2px #535353)
	display inline-block
	line-height 20px
	padding 4px 12px
	background-linear-gradient(top, #19a6df, 0%, #0a4aac, 100%)
	font-weight bold
	color #fff
	cursor pointer
	vertical-align middle
	text-shadow 1px 1px 1px #444
	&:hover
		text-decoration none
	&:active
		position relative
		top 1px
	&.disabled
		background #19a6df
		box-shadow(none)
		cursor default
		text-shadow none
		&:active
			top 0
